{
  "ts-node": {
    "files": true,
  },
  "files": [
    "types/index.d.ts"
  ],
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom",
    ],
    "declaration": false,
    "typeRoots": [
      "./node_modules/@types/",
    ]
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts",
    "./scripts/*.ts",
    "./tools/*.ts"
  ],
  "exclude": [
    "node_modules",
    "*.json",
    "*.js",
  ]
}
